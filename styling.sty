% Font style
\usepackage{fontspec}
\setmainfont{OpenSauceOne}[
    Path=./Fonts/OpenSauceOne/,
    Extension = .ttf,
    UprightFont=*-Regular,
    BoldFont=*-Bold,
    ItalicFont=*-Italic,
    BoldItalicFont=*-BoldItalic
    ]
